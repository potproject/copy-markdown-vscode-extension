{
    "name": "copy-markdown",
    "displayName": "Copy Markdown",
    "description": "An extension that copies files to the clipboard in Markdown format from the right-click menu.",
    "description.ja": "右クリックメニューからファイルを Markdown 形式でクリップボードにコピーする拡張機能",
    "version": "0.0.1",
    "publisher": "potproject",
    "repository": {
      "type": "git",
      "url": "https://github.com/potproject/copy-markdown-vscode-extension"
    },
    "engines": {
      "vscode": "^1.70.0"
    },
    "categories": [
      "Other"
    ],
    "activationEvents": [
      "onCommand:copyMarkdown.copyMarkdown"
    ],
    "main": "./out/extension.js",
    "contributes": {
      "commands": [
        {
          "command": "copyMarkdown.copyMarkdown",
          "title": "Copy Markdown"
        }
      ],
      "menus": {
        "explorer/context": [
          {
            "command": "copyMarkdown.copyMarkdown",
            "when": "resourceFilename =~ /.+/",
            "group": "navigation"
          }
        ]
      }
    },
    "scripts": {
      "vscode:prepublish": "npm run compile",
      "vscode:package": "npx vsce package",
      "compile": "tsc -p ./"
    },
    "devDependencies": {
      "typescript": "^4.0.0",
      "vscode": "^1.1.37",
      "@types/node": "^14.0.0"
    }
  }
  